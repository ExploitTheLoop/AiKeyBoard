<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape with Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:radius="2dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#FF6200EE" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Dropdown Icon with Padding -->
    <item
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="end|center_vertical"
        android:left="8dp"
        android:right="8dp"
        android:top="0dp"
        android:bottom="0dp" />
</layer-list>
